<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user){ %>
      <form action='/logout' method="post">
        <label form='name' >Logged in as : <%= user.email %></label>
        <button type="submit" class = 'btn btn-outline-light btn-sm' style="margin: 1em"> Logout </button>
      </form>
    <% } else { %>
        <a href="/login" class = 'btn btn-outline-light btn-sm' style="margin: 1em" > Login </a>
        <a href="/register" class = 'btn btn-outline-light btn-sm' style="margin: 1em" > Registration </a>
      </form>
    <% } %>
  </nav>
</header>
